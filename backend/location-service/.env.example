# Location Service Environment Configuration

# Server
PORT=3001
HOST=0.0.0.0
NODE_ENV=development

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=mobility:

# WebSocket Configuration
WS_PATH=/location
WS_PING_INTERVAL=30000
WS_PING_TIMEOUT=5000

# Location Settings
LOCATION_UPDATE_INTERVAL_MS=5000
DRIVER_LOCATION_TTL_SECONDS=60
DEFAULT_SEARCH_RADIUS_METERS=5000
MAX_SEARCH_RADIUS_METERS=50000

# Multi-tenant Settings
ENABLE_TENANT_ISOLATION=true
DEFAULT_TENANT_ID=default

# Rate Limiting
RATE_LIMIT_WINDOW_MS=1000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# Kafka (for event streaming - optional)
KAFKA_ENABLED=false
KAFKA_BROKERS=localhost:9092
KAFKA_LOCATION_TOPIC=location-updates
KAFKA_CLIENT_ID=location-service
